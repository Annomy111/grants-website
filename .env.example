# Environment Variables for Civil Society Grants Database
# Copy this file to .env.local for local development

# Supabase Configuration
REACT_APP_SUPABASE_URL=your_supabase_project_url
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key

# Server-side only (Netlify Functions)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Chat Configuration
GOOGLE_GEMINI_API_KEY=your_gemini_api_key

# Optional: Use static data instead of database
# REACT_APP_USE_STATIC_DATA=true

# Optional: Override API URL
# REACT_APP_API_URL=http://localhost:8888/.netlify/functions